<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    android:orientation="vertical">

    <include
        android:id="@+id/header_clinic_info"
        layout="@layout/header_logo_white_back"/>

    <view.custom_view.TextViewHeavy
        android:id="@+id/title_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_clinic_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:maxLines="1"
        android:text="@string/conditiontitle"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_below="@+id/title_condition"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_white_info">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/info_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp">

                    <view.custom_view.TextViewHeavy
                        android:id="@+id/txt_infomation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8dp"
                        android:textSize="20sp" />

                    <view.custom_view.TextViewHeavy
                        android:autoLink="email"
                        android:id="@+id/txt_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:lineSpacingExtra="8dp"
                        android:textSize="20sp" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_nametest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:lineSpacingExtra="5dp" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_worktime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_info"
        android:text="@string/cancle"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_info"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="18sp" />


    <RadioButton
        android:id="@+id/check_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:buttonTint="@color/white"
        android:text="@string/aceeptterm"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>