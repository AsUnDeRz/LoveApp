<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical">

    <include
        android:id="@+id/header_oldnew_user"
        layout="@layout/header_logo_blue" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_oldnew_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_left" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_center" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/img_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <view.custom_view.TextViewHeavy
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:text="@string/firsttime"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp" />

        <view.custom_view.TextViewMedium
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:text="@string/hintfirstpage"
            android:textColor="@color/colorGrey"
            android:textSize="24sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_below="@+id/text"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_box"
        android:orientation="horizontal">

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_signin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/signin"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="25dp"
            app:srcCompat="@drawable/arrow_white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_newaccout"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_below="@+id/btn_signin"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_gray"
        android:orientation="horizontal">

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_newaccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/newacc"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="25dp"
            app:srcCompat="@drawable/arrow_white" />

    </RelativeLayout>

</RelativeLayout>