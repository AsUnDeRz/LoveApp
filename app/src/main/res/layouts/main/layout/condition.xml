<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    android:orientation="vertical">

    <include
        android:id="@+id/header_clinic_info"
        layout="@layout/header_logo_white_back"/>

    <view.custom_view.TextViewHeavy
        android:id="@+id/title_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_clinic_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:maxLines="1"
        android:text="@string/conditiontitle"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_condition"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <view.custom_view.TextViewHeavy
                    android:id="@+id/txt_infomation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:textSize="14sp" />

                <view.custom_view.TextViewHeavy
                    android:id="@+id/txt_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_infomation"
                    android:layout_marginBottom="16dp"
                    android:autoLink="email"
                    android:lineSpacingExtra="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:text="love.application@raksthai.org"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_no"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_info"
        android:text="@string/cancle"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_info"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:visibility="gone" />

    <RadioButton
        android:id="@+id/check_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:buttonTint="@color/white"
        android:text="@string/aceeptterm"
        android:textColor="@color/white" />


</RelativeLayout>