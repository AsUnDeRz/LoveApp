<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_guy_risk" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/shade_top" />
    <include
        android:id="@+id/header_question"
        layout="@layout/header_logo_white_back"/>

    <view.custom_view.TextViewHeavy
        android:id="@+id/txt_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView15"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="2. I have sex with:"
        android:textColor="@color/colorPrimary"
        android:textSize="38sp" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView15"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/button_box"
            android:text="Men"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/button_box"
            android:text="Women"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box1"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btn_3"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/button_box"
            android:text="Both men and women"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <android.support.v4.widget.Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.Space
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>