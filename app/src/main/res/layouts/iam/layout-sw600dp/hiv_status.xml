<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <include
        android:id="@+id/header_hiv_status"
        layout="@layout/header_logo_white_back" />

    <ImageView
        android:id="@+id/circle_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/header_hiv_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/circle_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:orientation="vertical">

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hiv Status"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Positive"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Negative"
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_dontknow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="I don't know"
            android:textColor="@android:color/white"
            android:textSize="28sp" />
    </LinearLayout>

</RelativeLayout>