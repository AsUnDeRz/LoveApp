<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <include
        android:id="@+id/header"
        layout="@layout/header_logo_white_back" />

    <ImageView
        android:id="@+id/circle_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/title_whoru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circle_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Who are you?"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_gender"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_whoru"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

</RelativeLayout>