<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <include
        android:id="@+id/header_hiv_status"
        layout="@layout/header_logo_white" />

    <ImageView
        android:id="@+id/circle_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/header_hiv_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/circle_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:orientation="vertical">

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hivstatus"
            android:textColor="@android:color/white"
            android:textSize="32sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_positive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_negative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_dontknow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>