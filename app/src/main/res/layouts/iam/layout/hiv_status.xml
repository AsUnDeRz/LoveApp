<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    android:orientation="vertical">
    <include
        android:id="@+id/header_hiv_status"
        layout="@layout/header_logo_white_back"/>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/header_hiv_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/image_cycle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:orientation="vertical">

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hiv Status"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_positive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Positive"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_negative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Negative"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_dontknow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="I don't know"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>