<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    android:orientation="vertical">

    <include
        android:id="@+id/header_riskmeter"
        layout="@layout/header_logo_white_back"/>

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/header_riskmeter"
        app:srcCompat="@drawable/meter_circle" />

    <ImageView
        android:id="@+id/meter_pin"
        android:layout_width="40dp"
        android:layout_height="140dp"
        android:layout_alignBottom="@+id/imageView13"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/meter_pin" />


</RelativeLayout>