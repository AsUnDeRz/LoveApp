<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white">
    <include
        android:id="@+id/header_learn_game"
        layout="@layout/header_logo_blue"/>

    <RelativeLayout
        android:id="@+id/btn_game"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/header_learn_game"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/box_games">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/arrow_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingStart="80dp">

            <view.custom_view.TextViewHeavy
                android:id="@+id/title_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Games"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <view.custom_view.TextViewMedium
                android:id="@+id/desc_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play more\nget more points"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_learn"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/btn_game"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_learn_main">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:padding="12dp"
            app:srcCompat="@drawable/arrow_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingStart="80dp">

            <view.custom_view.TextViewHeavy
                android:id="@+id/title_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learns"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <view.custom_view.TextViewMedium
                android:id="@+id/desc_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play more\nget more points"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_learn_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_learn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>