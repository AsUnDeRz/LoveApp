<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue"
    android:orientation="vertical">

    <include
        android:id="@+id/header_clinic_info"
        layout="@layout/header_logo_white_back"/>
<!--
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_clinic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/header_clinic_info"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#0e51a4"
        app:civ_border_width="4dp" />
        -->

    <view.custom_view.TextViewHeavy
        android:id="@+id/title_clinic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_clinic_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:maxLines="1"
        android:padding="3dp"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_clinic"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_white_info">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/info_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp">

                    <view.custom_view.TextViewHeavy
                        android:id="@+id/txt_infomation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/information"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="18sp" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_nametest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:lineSpacingExtra="5dp" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_worktime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <view.custom_view.TextViewHeavy
                        android:id="@+id/txt_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/contacts"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/info_title"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/info_map" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_web"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/info_phone" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_phone"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:srcCompat="@drawable/info_pin" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:lineSpacingExtra="8dp"
                        android:paddingStart="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/info_promotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/view_map"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="20dp">

                    <view.custom_view.TextViewHeavy
                        android:id="@+id/txt_promotitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/promotion"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="18sp" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_promotion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_promo_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <view.custom_view.TextViewMedium
                        android:id="@+id/txt_promo_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_booknow"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button_info"
        android:text="Book Now!"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:visibility="gone" />

</RelativeLayout>