    <ImageView
        android:id="@+id/pin_root"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="false"
        android:layout_gravity="center"
        app:srcCompat="@drawable/pin_blue" />
        -->
</LinearLayout>