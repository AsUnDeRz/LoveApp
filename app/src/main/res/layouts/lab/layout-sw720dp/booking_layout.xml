<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/bg_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <include
        android:id="@+id/header_booking"
        layout="@layout/header_logo_blue_back" />

    <view.custom_view.TextViewHeavy
        android:id="@+id/title_clinic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_booking"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Bangkok Clinic"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_clinic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:paddingLeft="100dp"
        android:paddingRight="100dp">

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Date"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/fill_box"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_date"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/colorGrey"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/arrow_blue_down" />
        </LinearLayout>


        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Time"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/fill_box"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_time"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/fill_box"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="@color/colorGrey"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/arrow_blue_down" />
        </LinearLayout>

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Phone"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/fill_box"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="@color/colorGrey"
            android:textSize="24sp" />

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textColor="@color/colorPrimary"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/fill_box"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="@color/colorGrey"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_below="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_box"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="28sp" />

</RelativeLayout>