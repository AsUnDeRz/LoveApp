<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/bg_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <include
        android:id="@+id/header_pill_reminder_time"
        layout="@layout/header_logo_blue_back" />

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:padding="18dp"
        app:srcCompat="@drawable/add_blue" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_reminder_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_pill_reminder_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>