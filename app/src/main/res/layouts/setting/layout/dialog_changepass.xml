<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <view.custom_view.TextViewHeavy
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/changepass"
        android:textSize="18dp" />

    <view.custom_view.TextViewMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/currentpass" />

    <EditText
        android:id="@+id/edt_current"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fill_box"
        android:inputType="textPassword"
        android:maxLength="4"
        android:padding="10dp" />

    <view.custom_view.TextViewMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/newpass" />

    <EditText
        android:id="@+id/edt_newpass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fill_box"
        android:inputType="textPassword"
        android:maxLength="4"
        android:padding="10dp" />

    <view.custom_view.TextViewMedium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/newpassagain" />

    <EditText
        android:id="@+id/edt_newpass_again"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fill_box"
        android:inputType="textPassword"
        android:maxLength="4"
        android:padding="10dp" />

</LinearLayout>