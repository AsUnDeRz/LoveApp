<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header_setting"
        layout="@layout/header_logo_blue_back" />

    <RelativeLayout
        android:id="@+id/btn_language"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/header_change_passcode"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/fill_box">

        <view.custom_view.TextViewHeavy
            android:id="@+id/txt_lang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:paddingStart="30dp"
            android:text="@string/language"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />


        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_ios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.6"
            app:kswThumbDrawable="@drawable/ios_selector_small"
            app:kswThumbMarginBottom="-12dp"
            app:kswThumbMarginLeft="-10dp"
            app:kswThumbMarginRight="-10dp"
            app:kswThumbMarginTop="-5dp" />
