<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/header_setting"
        layout="@layout/header_logo_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/btn_passcode"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_box">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/icon_passcode" />

                <view.custom_view.TextViewHeavy
                    android:id="@+id/txt_passcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingStart="120dp"
                    android:text="@string/passcode"
                    android:textColor="@android:color/white"
                    android:textSize="26sp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="20dp"
                    app:srcCompat="@drawable/arrow_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_reminder"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_box">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/icon_reminder" />

                <view.custom_view.TextViewHeavy
                    android:id="@+id/txt_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingStart="120dp"
                    android:text="@string/pillreminder"
                    android:textColor="@android:color/white"
                    android:textSize="26sp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:padding="20dp"
                    app:srcCompat="@drawable/arrow_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_test_hiv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_box">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/icon_test" />

                <view.custom_view.TextViewHeavy
                    android:id="@+id/txt_test_hiv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingStart="120dp"
                    android:text="@string/insertlab"
                    android:textColor="@android:color/white"
                    android:textSize="26sp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="20dp"
                    app:srcCompat="@drawable/arrow_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_cd4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_box">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/icon_account" />

                <view.custom_view.TextViewHeavy
                    android:id="@+id/txt_test_cd4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingStart="120dp"
                    android:text="CD4 &amp; VL."
                    android:textColor="@android:color/white"
                    android:textSize="26sp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="20dp"
                    app:srcCompat="@drawable/arrow_white" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btn_acc_setting"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_box">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/icon_account" />

                <view.custom_view.TextViewHeavy
                    android:id="@+id/txt_acc_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingStart="120dp"
                    android:text="@string/accsetting"
                    android:textColor="@android:color/white"
                    android:textSize="26sp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="20dp"
                    app:srcCompat="@drawable/arrow_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_feedback"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_box">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/icon_feedback" />

                <view.custom_view.TextViewHeavy
                    android:id="@+id/txt_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingStart="120dp"
                    android:text="@string/feedback"
                    android:textColor="@android:color/white"
                    android:textSize="26sp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="20dp"
                    app:srcCompat="@drawable/arrow_white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_language"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_box">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/icon_test" />

                <view.custom_view.TextViewHeavy
                    android:id="@+id/txt_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:paddingStart="120dp"
                    android:text="@string/language"
                    android:textColor="@android:color/white"
                    android:textSize="26sp" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="20dp"
                    app:srcCompat="@drawable/arrow_white" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>