<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/bg_guy_fade"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Well done!"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="You have already read"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_f3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Earned +53 points."
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/btn_readmore"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_box"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="30dp">

                <TextView
                    android:id="@+id/txt_readmore"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="Read more"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="20dp"
                app:srcCompat="@drawable/arrow_white" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_facebook"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/button_facebook" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/btn_getmore"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_box"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="30dp">

                <TextView
                    android:id="@+id/txt_getmore"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="Get more points"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:padding="20dp"
                app:srcCompat="@drawable/arrow_white" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>